<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashbd_bgp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user"
            android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="match_parent"
                    android:id="@+id/txt_name"
                    android:layout_height="wrap_content"
                    android:text="Azahar Sheikh"
                    android:textColor="@color/gold"
                    android:textSize="26dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/rg_myproject"
                        android:gravity="center"
                        android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/rbt_project_details"
                        android:layout_weight="1"
                        android:text="DETAILS"
                        android:gravity="center"
                        android:background="@drawable/rbtn_selector"
                        android:button="@null"
                        android:checked="true"
                        android:textColor="@drawable/rbtn_textcolor_selector"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

           </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border_btn"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        >

                            <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                                android:layout_width="match_parent"
                                android:paddingTop="5dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/gold"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="1. Sale Deed/Title deed /Conveyance Deed"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_project_desc" />

                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="2. RTC Extracts"
                            android:layout_height="wrap_content"
                            />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="3. Katha Certificate and Extracts"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />

                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="4. Mutation Register Extracts"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="5. Joint Development Agreement"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="6. General Power of Attorney"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="7. Building plan sanctioned by statutory authority"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="8. NOC from Electricity Deptt/Pollution Control Board/Water Works/ Air Port Authority"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="9. Supplementary agreement/Ratification Deed"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/gold"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="10. Allotment Letter from the builder/co-operativesociety/Housing Board/BDA."
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_project_desc" />

                    </LinearLayout>
                </ScrollView>
                </LinearLayout>

                </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    </LinearLayout>
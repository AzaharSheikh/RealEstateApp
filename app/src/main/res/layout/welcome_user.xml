<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/black"
                >
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Welcome"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:id="@+id/txt_view_name_text" />

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ash"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:id="@+id/name_text" />


            </LinearLayout>
            <ImageView
                android:layout_weight="4"
                android:id="@+id/iv_profile_pic"
                android:layout_width="match_parent"
                android:background="@drawable/nav_back"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="@color/gold"
            android:layout_weight="6"
            android:layout_height="0dp">
            <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/gold"
                android:background="@color/offwhite"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="With two international schools, retail stores, hotels and spa, parks and entertainment centres, Sobha Hartland is and will be one of the most sought after living and property "
                android:layout_height="0dp"
                android:id="@+id/txt_project_desc" />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_weight="0.5"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/li_overview"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:background="@color/gold"
                >

                <ImageView
                    android:layout_width="160dp"
                    android:id="@+id/img_user"
                    android:layout_height="wrap_content"
                    android:src="@drawable/installment"
                    android:padding="5dp"
                    />
                <ImageView
                    android:layout_width="160dp"
                    android:id="@+id/img_user"
                    android:layout_height="wrap_content"
                    android:src="@drawable/installment"
                    android:padding="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="4.5"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="0dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img_user"
                    android:src="@drawable/tollfree"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="\u00a9 2012-2016 GEMINI GROUP"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>



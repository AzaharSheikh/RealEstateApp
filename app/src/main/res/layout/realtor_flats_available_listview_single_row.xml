<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/lv_flt_aval_main_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_flts_available_msg_id"
                android:text="1"
                android:padding="2dp"
                android:textColor="@color/gold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_flts_available_msg_details"
                android:layout_weight="5"
                android:padding="5dp"
                android:textColor="@color/gold"
                android:text="2 flats Available on 5 th floor"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_flts_available_msg_date"
                android:layout_weight="3"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:text="02/12/2016"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:src="@drawable/pen"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:id="@+id/textView1"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                />

            <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attention"
                    android:id="@+id/textView2"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Information that we collect from you"
                    android:id="@+id/textView3"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/second"
                    android:id="@+id/textView4"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/third"
                    android:id="@+id/textView5"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fourth"
                    android:id="@+id/textView6"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fifth"
                    android:id="@+id/textView7"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sixth"
                    android:id="@+id/textView8"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"/>
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seventh"
                    android:id="@+id/textView8"
                    android:textSize="12dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/gold"
                    />
                    />
            </LinearLayout>

            </LinearLayout>
</ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="40dp"
        android:layout_height="wrap_content">


        <com.thoughtinterac.realestateapp.Fonts.TypefacedEditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/gold"
            android:textColorHint="@color/gold"
            android:hint="Please enter your Email Id or Mobile Number"
            android:background="@drawable/layout_border"
            android:layout_height="wrap_content" />


        <com.thoughtinterac.realestateapp.Fonts.TypefacedEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/gold"
            android:textColorHint="@color/gold"
            android:hint="Re-Enter Password"
            android:background="@drawable/layout_border"
            android:layout_height="wrap_content" />

        <com.thoughtinterac.realestateapp.Fonts.TypefacedEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/gold"
            android:textColorHint="@color/gold"
            android:hint="Conform Password"
            android:background="@drawable/layout_border"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.thoughtinterac.realestateapp.Fonts.TypefacedButton
            android:id="@+id/btn_login"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rd_corner_bt"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>
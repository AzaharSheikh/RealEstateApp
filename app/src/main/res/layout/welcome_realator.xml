<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/black"
                >
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Welcome"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:padding="5dp"
                    android:id="@+id/txt_view_name_text" />

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rajeev Sharma"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:paddingLeft="5dp"
                    android:id="@+id/realator_name" />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="!"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/black"

                    />


            </LinearLayout>
            <ImageView
                android:layout_weight="4"
                android:id="@+id/iv_profile_pic"
                android:layout_width="match_parent"
                android:background="@drawable/nav_back"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="@color/gold"
            android:layout_weight="6"
            android:layout_height="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:text="AVAILABLE FLATS  BOOKED FLATS "
                android:visibility="gone"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:background="@color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="0dp"
                android:id="@+id/txt_project_desc" />

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"

    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
        android:paddingTop="2dp"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="5dp"
        android:text="FLATS BOOKED"
        android:textSize="15sp"
        android:textColor="@color/gold"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:background="@color/black"
      android:padding="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="FLATS UNBOOKED"
        android:textSize="15sp"
        android:textColor="@color/gold"
        android:layout_height="wrap_content" />

</LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView2
                   android:layout_width="match_parent"
                   android:background="@color/black"
                   android:layout_weight="1"
                   android:gravity="center|top"
                   android:text="25"
                   android:textSize="35sp"
                   android:paddingTop="5dp"
                   android:textStyle="bold"
                   android:textColor="@color/gold"
                   android:layout_height="wrap_content" />
               <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView2
                   android:layout_width="match_parent"
                   android:background="@color/black"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:text="15 "
                android:paddingTop="5dp"
                   android:textSize="35sp"
                   android:textStyle="bold"
                   android:textColor="@color/gold"
                   android:layout_height="wrap_content" />
           </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/li_overview"
                android:layout_weight="5"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:background="@color/gold"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/img_userlist"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/listofusers"
                    android:padding="5dp"

                    />
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/img_user"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/newupdates"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_height="0dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/img_user"
                    android:gravity="top"
                    android:src="@drawable/banksofferingloan"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_weight="1"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="\u00a9 2012-2016 GEMINI GROUP"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>


   
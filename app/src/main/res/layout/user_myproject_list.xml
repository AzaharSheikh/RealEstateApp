<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                >
                <ImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:src="@drawable/proj_list1"
                    android:adjustViewBounds="true"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:layout_height="match_parent">
                    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_project_name"
                        android:text="Gemini Splendor"
                        android:textSize="12sp"

                        android:textStyle="bold"
                        android:padding="2dp"
                        android:textColor="@color/gold" />
                    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_project_type"
                        android:text="1BHK"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:textColor="@color/gold" />
                    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                        android:layout_width="match_parent"
                        android:id="@+id/txt_project_location"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:textColor="@color/gold" />
                </LinearLayout>

                <com.thoughtinterac.realestateapp.Fonts.TypefacedButton
                    android:id="@+id/btn_view"
                    android:layout_gravity="center"
                    android:text="View"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="40dp"
                    android:background="@drawable/border_btn"
                    android:textColor="@color/gold"
                    android:textSize="12dp"
                  />

              </LinearLayout>




    </LinearLayout>

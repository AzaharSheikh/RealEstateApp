<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashbd_bgp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                >
                <ImageView
                    android:id="@+id/iv_profile_pic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:src="@drawable/proj_list1"
                    android:adjustViewBounds="true"
                    />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Gemini Splendor
1 BHK Apt.
1045 sq.ft.gross area           "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_weight="5"
                    android:gravity="center_vertical"
                    android:textColor="@color/gold" />
                <com.thoughtinterac.realestateapp.Fonts.TypefacedButton
                    android:id="@+id/btn_view"
                    android:layout_gravity="center"
                    android:text="View"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rd_corner_bt"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                  />


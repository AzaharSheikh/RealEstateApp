<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    >
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/rg_myproject"
    android:gravity="center"
    android:orientation="horizontal" >
    <RadioButton
        android:id="@+id/rbt_project_details"
        android:layout_weight="1"
       android:text="Overview"
        android:gravity="center"
        android:background="@drawable/rbtn_selector"
        android:button="@null"
        android:checked="true"
        android:textColor="@drawable/rbtn_textcolor_selector"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/rbt_photos_list"
        android:layout_width="0dp"
        android:padding="5dp"
        android:background="@drawable/rbtn_selector"
        android:textColor="@drawable/rbtn_textcolor_selector"
        android:text="Photos"
        android:button="@null"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/rbt_map"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/rbtn_selector"
        android:textColor="@drawable/rbtn_textcolor_selector"
        android:text="Near By"
        android:button="@null"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</RadioGroup>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_place"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="@color/offwhite"
        >

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li_my_project_photos"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/list_photo"
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                </ListView>
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/photo_camera"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:id="@+id/txt_location"
                        android:text="Users Images"
                        android:background="@color/gold"
                        android:textColor="@color/offwhite"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                     <GridView
                        android:id="@+id/list_photo"
                        android:layout_weight="7"
                         android:numColumns="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </GridView>
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/photo_camera"
                        android:adjustViewBounds="true"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_location"
                    android:text="Realtor Images"
                    android:layout_margin="5dp"
                    android:background="@color/gold"
                    android:textColor="@color/offwhite"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:id="@+id/li_my_project_photos"
                    android:visibility="visible"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:weightSum="10"
                        android:layout_height="wrap_content">
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_location"
                            android:text="Overview Of the Project"
                            android:textColor="@color/gold"
                            android:textSize="16dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/overview_image"
                            android:adjustViewBounds="true"
                            />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_location"
                            android:text="living room"
                            android:textColor="@color/gold"
                            android:textSize="16dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hall"
                            android:adjustViewBounds="true"
                            />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_location"
                            android:text="Study Room"
                            android:textColor="@color/gold"
                            android:textSize="16dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/studyroom1"
                            android:adjustViewBounds="true"
                            />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_location"
                            android:text="kids Room"
                            android:textColor="@color/gold"
                            android:textSize="16dp"
                            android:padding="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/kidsroom1"
                            android:adjustViewBounds="true"
                            />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/li_my_project_photos"
        android:visibility="visible"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li_overview"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/li_overview"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:text="Overview Of the Project"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/overview_image"
                    android:adjustViewBounds="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="A luxury community experience at an
affordable price near upcoming
Metro Station"
                    android:textColor="@color/gold"
                    android:textSize="16dp"
                    android:padding="5dp"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_bhk"
                    android:text="Types of flats"
                    android:textColor="@color/gold"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/rg_flat_type"
                android:gravity="center"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/rbt_one_bhk_details"
                    android:layout_weight="1"
                    android:text="1 BHK"
                    android:gravity="center"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbt_two_bhk_list"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:background="@drawable/rbtn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="2 BHK"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbt_three_bhk"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:background="@drawable/rbtn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="3 BHK"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/layout_border"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                        android:layout_weight="7.5"
                        android:textColor="@color/gold"
                        android:id="@+id/txt_view_area_sq_ft"
                        android:text="Floor Area in sq. ft :"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:text="500"
                            android:id="@+id/txt_value_area_sq_ft"
                            android:layout_weight="2.5"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_weight="7.5"
                            android:textColor="@color/gold"
                            android:id="@+id/txt_view_flat_available"
                            android:text="No. of flats available :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:text="500"
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_flat_available"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_construction_stage"
                            android:textColor="@color/gold"
                            android:text="Construction Stage :"
                            android:layout_width="0dp"
                            android:paddingLeft="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:text="50%"
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_construction_stage"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_amenities"
                            android:textColor="@color/gold"
                            android:text="Amenities :"
                            android:layout_width="0dp"
                            android:paddingLeft="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView

                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_amenities"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_extra_feature"
                            android:textColor="@color/gold"
                            android:text="Extra Features :"
                            android:layout_width="0dp"
                            android:paddingLeft="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_extra_feature"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_price"
                            android:textColor="@color/gold"
                            android:text="@string/PriceRs"
                            android:layout_width="0dp"
                            android:paddingLeft="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                        <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
                            android:text="50 Lac"
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_price"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
    </LinearLayout>
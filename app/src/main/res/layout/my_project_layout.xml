<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    >
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp"
    android:id="@+id/rg_myproject"
    android:gravity="center"
    android:orientation="horizontal" >
    <RadioButton
        android:id="@+id/rbt_project_details"
        android:layout_weight="1"
       android:text="Overview"
        android:gravity="center"
        android:background="@drawable/rbtn_selector"
        android:button="@null"
        android:checked="true"
        android:textColor="@drawable/rbtn_textcolor_selector"
        android:padding="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/rbt_photos_list"
        android:layout_width="0dp"
        android:padding="5dp"
        android:background="@drawable/rbtn_selector"
        android:textColor="@drawable/rbtn_textcolor_selector"
        android:text="Photos"
        android:button="@null"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/rbt_map"
        android:layout_weight="1"
        android:padding="5dp"
        android:background="@drawable/rbtn_selector"
        android:textColor="@drawable/rbtn_textcolor_selector"
        android:text="Near By"
        android:button="@null"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</RadioGroup>
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/list_place"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:background="@color/black"
        >

    </ListView>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/li_my_project_photos"
        android:visibility="gone"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/my_project_photos"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:text="Overview Of the Project"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overview_image"
                android:adjustViewBounds="true"
                />
             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:text="living room"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hall"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:text="Study Room"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/studyroom1"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:text="kids Room"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kidsroom1"
                android:adjustViewBounds="true"
                />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/li_my_project_photos"
        android:visibility="visible"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/li_overview"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/li_overview"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_location"
                android:text="Overview Of the Project"
                android:textColor="@color/gold"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/overview_image"
                    android:adjustViewBounds="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_location"
                    android:text="A luxury community experience at an
affordable price near upcoming
Metro Station"
                    android:textColor="@color/gold"
                    android:textSize="16dp"
                    android:padding="5dp"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_bhk"
                    android:text="Types of flats"
                    android:textColor="@color/gold"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textStyle="bold|italic"
                    />

            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/rg_flat_type"
                android:gravity="center"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/rbt_one_bhk_details"
                    android:layout_weight="1"
                    android:text="1 BHK"
                    android:gravity="center"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbt_two_bhk_list"
                    android:layout_width="0dp"
                    android:padding="5dp"
                    android:background="@drawable/rbtn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="2 BHK"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rbt_three_bhk"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@drawable/rbtn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="3 BHK"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/layout_border"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="7.5"
                        android:textColor="@color/gold"
                        android:id="@+id/txt_view_area_sq_ft"
                        android:text="Floor Area in sq. ft :"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                        <TextView
                            android:text="500"
                            android:id="@+id/txt_value_area_sq_ft"
                            android:layout_weight="2.5"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7.5"
                            android:textColor="@color/gold"
                            android:id="@+id/txt_view_flat_available"
                            android:text="No. of flats available :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="500"
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_flat_available"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_construction_stage"
                            android:textColor="@color/gold"
                            android:text="Construction Stage :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="50%"
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_construction_stage"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_amenities"
                            android:textColor="@color/gold"
                            android:text="Amenities :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_amenities"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_extra_feature"
                            android:textColor="@color/gold"
                            android:text="Extra Features :"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_extra_feature"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7.5"
                            android:id="@+id/txt_view_price"
                            android:textColor="@color/gold"
                            android:text="@string/PriceRs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="50 Lac"
                            android:layout_weight="2.5"
                            android:id="@+id/txt_value_price"
                            android:textColor="@color/gold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
    </LinearLayout>
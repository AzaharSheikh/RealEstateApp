<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/name_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gold"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:id="@+id/edt_username"
       />


    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/user_address" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:textColor="@color/gold"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:ems="10"
        android:id="@+id/edt_user_address" />

    <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Discription"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/job_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColor="@color/gold"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:ems="10"
        android:id="@+id/edt_job_dec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/mo_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:inputType="phone"
        android:textColor="@color/gold"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:ems="10"
        android:id="@+id/edt_mobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email id"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/id_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:textColor="@color/gold"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edt_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/password_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:textColor="@color/gold"
        android:maxLength="15"
        android:id="@+id/edt_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="15dp"
        android:textColor="@color/gold"
        android:padding="5dp"
        android:id="@+id/password_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="15"
        android:background="@drawable/layout_border"
        android:padding="5dp"
        android:textColor="@color/gold"
        android:inputType="textPassword"
        android:id="@+id/edt_comfirm_pass" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <com.thoughtinterac.realestateapp.Fonts.TypefacedButton
            android:layout_width="wrap_content"
            android:id="@+id/btn_register_submit"
          android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_height="35dp"
            android:text="Submit"
            android:background="@color/gold"
            android:textColor="@color/white"


            />


    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashbd_bgp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_height="match_parent"
  >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="3.5"
    android:layout_height="0dp">
 <WebView
     android:id="@+id/webHome"
     android:layout_width="match_parent"
     android:background="@color/transferent"
     android:layout_height="match_parent">

 </WebView>
 </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">
 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"

     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
     android:layout_height="0dp">
<TextView
    android:layout_width="match_parent"
    android:textSize="20sp"
    android:textColor="@color/gold"
    android:text="Overview"
    android:textStyle="bold"
    android:layout_height="wrap_content" />
  <TextView
      android:layout_width="match_parent"
      android:text="Gemini Splendor"
      android:textColor="@color/gold"
      android:textSize="20sp"
      android:layout_height="wrap_content" />
  <TextView
      android:layout_width="match_parent"
      android:textColor="@color/gold"

      android:paddingBottom="5dp"
      android:paddingTop="1dp"
      android:text="At MBR City you can expect to see crystal lagoons, beaches with soft sands, waterparks, parklands stretching as far as the horizon and breathtaking architecture."
      android:textSize="14sp"
      android:layout_height="wrap_content" />
  <TextView
      android:layout_width="match_parent"
      android:textSize="20sp"
      android:textColor="@color/gold"
      android:text="Location Details"
      android:textStyle="bold"
      android:layout_height="wrap_content" />
  <TextView
      android:paddingBottom="5dp"

      android:layout_width="match_parent"
      android:textColor="@color/gold"
      android:text="Gemini Property Developers, 609/610, Sobha Sapphire, Dubai "
      android:textSize="14sp"
      android:layout_height="wrap_content" />
     <LinearLayout
         android:layout_width="match_parent"

         android:orientation="horizontal"
         android:layout_height="wrap_content"

         android:background="@drawable/table_border"
         android:layout_marginTop="20dp"
         >

         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="Flats Styles"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:padding="5dp"
             android:textStyle="bold"
             android:gravity="center"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="fill_parent"
             android:background="@color/gold" />
         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:gravity="center"
             android:layout_height="wrap_content"
             android:text="1BHK"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:padding="5dp"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="fill_parent"
             android:background="@color/gold" />
         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="2BHK"
             android:gravity="center"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:padding="5dp"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="fill_parent"
             android:background="@color/gold" />
         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:text="3BHK"
             android:gravity="center"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:padding="5dp"
             />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_height="wrap_content"
         android:background="@drawable/table_border">
         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:text="Builtup Area:"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:paddingTop="10dp"
             android:gravity="center"
             android:paddingLeft="10dp"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/gold" />
         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:text="850"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:paddingTop="10dp"
             android:gravity="center"
             android:paddingLeft="10dp"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/gold" />

         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:text="1200"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:paddingTop="10dp"
             android:gravity="center"
             android:paddingLeft="10dp"
             />
         <View
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/gold" />
         <com.thoughtinterac.realestateapp.Fonts.TypefacedTextView
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:text="1525"
             android:textColor="@color/gold"
             android:textSize="16sp"
             android:textStyle="bold"
             android:paddingTop="10dp"
             android:gravity="center"
             android:paddingLeft="10dp"
             />
     </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:visibility="visible"
      android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:textSize="20sp"
       android:textColor="@color/gold"
       android:text="Amenties"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:textStyle="bold"
       android:layout_height="match_parent" />
      </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
   <ImageView
      android:layout_width="50dp"
       android:id="@+id/img_ameniti1"
       android:scaleType="fitStart"
      android:layout_marginLeft="5dp"
      android:layout_weight="1"
      android:adjustViewBounds="true"
      android:src="@drawable/a1"
      android:layout_height="50dp" />
   <ImageView
       android:layout_width="50dp"
       android:id="@+id/img_ameniti2"
       android:layout_marginLeft="5dp"
       android:layout_weight="1"
       android:scaleType="fitStart"
       android:adjustViewBounds="true"
       android:src="@drawable/a2"
       android:layout_height="50dp" />
   <ImageView
       android:layout_width="50dp"
       android:id="@+id/img_ameniti3"
       android:layout_marginLeft="5dp"
       android:layout_weight="1"
       android:adjustViewBounds="true"
       android:src="@drawable/a3"
       android:layout_height="50dp" />
      <ImageView
          android:layout_width="50dp"
          android:id="@+id/img_ameniti4"
          android:layout_marginLeft="5dp"
          android:layout_weight="1"
          android:adjustViewBounds="true"
          android:src="@drawable/a4"
          android:layout_height="50dp" />

  </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="match_parent"
             android:textSize="20sp"
             android:paddingBottom="5dp"
             android:paddingTop="5dp"
             android:textColor="@color/gold"
             android:text="Loan Available from :"
             android:textStyle="bold"
             android:layout_marginTop="20dp"
             android:layout_height="wrap_content" />
         <ImageView
             android:layout_width="wrap_content"
             android:src="@drawable/banklogos"
             android:layout_height="wrap_content" />
     </LinearLayout>
 </LinearLayout>
    </ScrollView>

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:background="@color/gold"
     android:layout_weight="1.5"

     android:layout_height="0dp">
<ImageView
    android:layout_weight="1"
    android:text="User"
    android:background="@color/gold"
    android:adjustViewBounds="true"
    android:padding="3dp"
    android:id="@+id/img_user_login"
    android:src="@drawable/login_user"

    android:layout_width="0dp"
    android:layout_height="match_parent" />
     <TextView
         android:layout_width="wrap_content"
         android:layout_gravity="center"
         android:textSize="16sp"
         android:text="Or"
         android:textStyle="bold"
         android:textColor="@color/offwhite"
         android:layout_height="wrap_content" />
  <ImageView
      android:layout_weight="1"
      android:text="Realtor"
      android:adjustViewBounds="true"
      android:padding="3dp"
      android:background="@color/gold"
      android:id="@+id/img_realtor_login"
      android:src="@drawable/login_realtor"
      android:layout_width="0dp"
      android:layout_height="match_parent" />
 </LinearLayout>
</LinearLayout>
</LinearLayout>



